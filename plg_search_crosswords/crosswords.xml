<?xml version="1.0" encoding="utf-8" standalone="no"?>

<extension group="search" method="upgrade" type="plugin" version="3.5">
    <name>Search - Community Crosswords</name>
    <creationDate>2023-Feb-05</creationDate>
    <author>Maverick</author>
    <authorEmail>support@corejoomla.com</authorEmail>
    <authorUrl>http://www.corejoomla.com</authorUrl>
    <copyright>Copyright (C) Copyright &#169; 2009 - 2013 corejoomla.com. All rights reserved.</copyright>
    <license>http://www.corejoomla.com GNU/GPL</license>
    <version>4.0.0</version>
    <description>Search Community Crosswords</description>
    <files>
        <filename plugin="crosswords">crosswords.php</filename>
    </files>
    <languages folder="language/en-GB">
        <language tag="en-GB">en-GB.plg_search_crosswords.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field default="50" description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC" label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL" name="search_limit" size="5" type="text"></field>
                <field default="0" description="JFIELD_PLG_SEARCH_ALL_DESC" label="JFIELD_PLG_SEARCH_ALL_LABEL" name="search_content" type="radio">
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>

